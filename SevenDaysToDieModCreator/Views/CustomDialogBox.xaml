        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SevenDaysToDieModCreator.Views"
        Height="292" Width="350" ResizeMode="NoResize">
    <Grid Height="375">
        <StackPanel VerticalAlignment="Center" Height="376">
            <TextBlock FontFamily="Arial" FontSize="15" TextWrapping="Wrap" Name="LabelTextBlock" Height="196" Width="322"/>
            <TextBox Background="LightGray" FontFamily="Arial" x:Name="InputTextBlock" Height="27"  />
            <Button FontFamily="Arial" Content="OK" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
