<Window x:Class="SevenDaysToDieModCreator.Views.CustomDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SevenDaysToDieModCreator.Views"
        Height="Auto" Width="Auto" MaxHeight="350" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <StackPanel Name="CustomDialogPanel" VerticalAlignment="Top"  Height="Auto">
                <ScrollViewer VerticalAlignment="Top">
                    <TextBlock FontFamily="Arial" FontSize="15" TextWrapping="Wrap" Name="LabelTextBlock"/>
                </ScrollViewer>
                <Button Name="OkButton" FontFamily="Arial" Content="OK" Click="OKButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
